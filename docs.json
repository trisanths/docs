        "tab": "Resources",
        "groups": [
          {
            "group": "SDKs & Libraries",
            "pages": [
              "resources/sdks",
              "resources/libraries"
            ]
          },
          {
            "group": "Tools",
            "pages": [
              "resources/tools",
              "resources/integrations"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "resources/support",
              "resources/faq",
              "resources/changelog"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/cyrionlabs",
          "icon": "github"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/cyrionlabs",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://blog.cyrionlabs.com",
          "icon": "newspaper"
        }
      ]
    }
