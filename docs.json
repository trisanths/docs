{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "CyrionAI API",
  "description": "Free AI API for nonprofits powered by Cyrion Labs",
  "colors": {
    "primary": "#6366F1",
    "light": "#8B5CF6",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core features",
            "pages": [
              "features/chat-completions",
              "features/image-generation",
              "features/video-generation",
              "features/audio-transcription"
            ]
          },
          {
            "group": "Models",
            "pages": [
              "models/available-models",
              "models/model-comparison"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/chat-examples",
              "examples/image-examples",
              "examples/video-examples",
              "examples/audio-examples"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Core endpoints",
            "pages": [
              "api-reference/chat-completions",
              "api-reference/image-generation",
              "api-reference/image-variations",
              "api-reference/video-generation",
              "api-reference/audio-transcription",
              "api-reference/models"
            ]
          },
          {
            "group": "Admin endpoints",
            "pages": [
              "api-reference/admin/users",
              "api-reference/admin/grants",
